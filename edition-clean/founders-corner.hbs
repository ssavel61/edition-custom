{{!< default}}

<main class="site-main template-founders">

  <!-- Editable hero pulled from the Page with slug "founders-corner" -->
  <header class="feed-header gh-canvas">
    <div class="feed-header-wrapper">
      {{#get "pages" filter="slug:founders-corner" limit="1"}}
        {{#foreach pages}}
          <h1 class="feed-header-title">{{title}}</h1>
          {{#if custom_excerpt}}<p class="feed-header-desc">{{custom_excerpt}}</p>{{/if}}
          {{{html}}}
        {{/foreach}}
      {{/get}}
    </div>
  </header>

  <!-- Narrow feed container for better card layout -->
  <section class="gh-canvas">
    <div class="gh-feed">
      {{#foreach posts}}
        {{> "loop"}}
      {{else}}
        <div class="gh-canvas"><p>No posts here yetâ€”first entry coming soon.</p></div>
      {{/foreach}}
    </div>
    {{pagination}}
  </section>

</main>
