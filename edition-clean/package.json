{
  "name": "edition-clean",
  "version": "1.0.53",
  "author": { "email": "admin@mindovermoney.ai" },
  "engines": { "ghost": ">=5.0.0" },
  "license": "MIT",
  "keywords": ["ghost-theme"],
  "config": {
    "posts_per_page": 8,
    "custom": {
      "feed_layout": {
        "type": "select",
        "group": "homepage",
        "options": ["grid", "list", "Minimal", "Right thumbnail", "Text-only"],
        "default": "grid"
      },
      "feed_title": {
        "type": "text",
        "group": "homepage",
        "default": "Latest"
      },
      "featured_title": {
        "type": "text",
        "group": "homepage",
        "default": "Featured"
      },
      "show_featured_posts": {
        "type": "boolean",
        "group": "homepage",
        "default": true
      },
      "title_font": {
        "type": "select",
        "group": "site",
        "options": ["Modern sans-serif", "Elegant serif"],
        "default": "Modern sans-serif"
      },
      "body_font": {
        "type": "select",
        "group": "site",
        "options": ["Modern sans-serif", "Elegant serif"],
        "default": "Modern sans-serif"
      },
      "email_signup_text": {
        "type": "text",
        "group": "site",
        "default": "Financial freedom through mindset, education and technology"
      },
      "show_related_posts": {
        "type": "boolean",
        "group": "post",
        "default": true
      },
      "show_author": {
        "type": "boolean",
        "group": "post",
        "default": true
      },
      "navigation_layout": {
        "type": "select",
        "group": "site",
        "options": ["centered", "stacked"],
        "default": "centered"
      },
      "publication_cover_style": {
        "type": "select",
        "group": "site",
        "options": ["circle", "square", "hidden"],
        "default": "square"
      }
    }
  }
}
