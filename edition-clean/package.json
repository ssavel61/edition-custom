{
  "name": "edition-clean",                     // keep EXACTLY your current theme name
  "version": "1.0.22",                         // bump each deploy (X.Y.Z semver)
  "author": { "email": "admin@mindovermoney.ai" },
  "engines": { "ghost": ">=5.0.0" },
  "license": "MIT",
  "keywords": ["ghost-theme"],
  "config": {
    "posts_per_page": 8,
    "custom": {
      "feed_layout": {
        "type": "select",
        "group": "homepage",
        "options": ["grid", "list"],
        "default": "grid"
      },
      "feed_title": {
        "type": "text",
        "group": "homepage",
        "default": "Latest"
      },
      "featured_title": {
        "type": "text",
        "group": "homepage",
        "default": "Featured"
      },
      "show_related_posts": {
        "type": "boolean",
        "group": "post",
        "default": true
      },
      "show_author": {
        "type": "boolean",
        "group": "post",
        "default": true
      },
      "navigation_layout": {
        "type": "select",
        "group": "site",
        "options": ["centered", "stacked"],
        "default": "centered"
      },
      "publication_cover_style": {
        "type": "select",
        "group": "site",
        "options": ["circle", "square", "hidden"],
        "default": "square"
      }
    }
  }
}
