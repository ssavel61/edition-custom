{{!< default}}

{{!-- Homepage-specific styles --}}
<style>
  /* ===== HOMEPAGE LAYOUT ===== */
  .ngw-home .site-content { padding: 0 !important; }

  /* ===== HERO ===== */
  .ngw-hero {
    background: #2c353c;
    padding: 8vmin 4vmin 6vmin;
    text-align: center;
  }
  .ngw-hero-inner {
    max-width: 720px;
    margin: 0 auto;
  }
  .ngw-hero-tagline {
    font-family: var(--gh-font-heading, var(--font-sans));
    font-size: clamp(2.4rem, 5vw, 3.8rem);
    font-weight: 800;
    line-height: 1.15;
    color: #fff;
    margin: 0 0 1.2rem;
    letter-spacing: -0.02em;
  }
  .ngw-hero-tagline em {
    font-style: normal;
    color: #f3e2ae;
  }
  .ngw-hero-sub {
    font-size: clamp(1.4rem, 2.5vw, 1.8rem);
    color: #8abfc5;
    margin: 0 0 2.5rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }
  .ngw-hero-form {
    display: flex;
    max-width: 460px;
    margin: 0 auto 1rem;
    gap: 0;
  }
  .ngw-hero-form input[type="email"] {
    flex: 1;
    height: 50px;
    padding: 0 16px;
    border: 2px solid rgba(138,191,197,0.3);
    border-right: none;
    border-radius: 6px 0 0 6px;
    background: rgba(255,255,255,0.08);
    color: #fff;
    font-size: 1.5rem;
    outline: none;
    transition: border-color 0.2s;
  }
  .ngw-hero-form input[type="email"]::placeholder {
    color: rgba(255,255,255,0.4);
  }
  .ngw-hero-form input[type="email"]:focus {
    border-color: #8abfc5;
    background: rgba(255,255,255,0.12);
  }
  .ngw-hero-form button {
    height: 50px;
    padding: 0 24px;
    background: #f3e2ae;
    color: #2c353c;
    font-weight: 700;
    font-size: 1.4rem;
    border: none;
    border-radius: 0 6px 6px 0;
    cursor: pointer;
    white-space: nowrap;
    transition: background 0.2s;
  }
  .ngw-hero-form button:hover {
    background: #e8d49a;
  }
  .ngw-hero-form .loader,
  .ngw-hero-form .success { display: none; }
  .ngw-hero-proof {
    font-size: 1.3rem;
    color: rgba(255,255,255,0.55);
    margin: 0;
    letter-spacing: 0.01em;
  }

  @media (max-width: 520px) {
    .ngw-hero-form {
      flex-direction: column;
      gap: 8px;
    }
    .ngw-hero-form input[type="email"] {
      border-right: 2px solid rgba(138,191,197,0.3);
      border-radius: 6px;
    }
    .ngw-hero-form button {
      border-radius: 6px;
      height: 46px;
    }
  }

  /* ===== VALUE PROP BOXES ===== */
  .ngw-value {
    padding: 6vmin 4vmin;
    background: #eef3f4;
  }
  .ngw-value-inner {
    max-width: 1000px;
    margin: 0 auto;
  }
  .ngw-value-heading {
    text-align: center;
    font-size: clamp(1.8rem, 3vw, 2.4rem);
    font-weight: 800;
    margin: 0 0 3rem;
    color: #2c353c;
  }
  .ngw-value-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  .ngw-value-card {
    padding: 2.4rem 2rem;
    border-radius: 10px;
    background: #fff;
    border: 1px solid #d5dee0;
    border-top: 3px solid #8abfc5;
    transition: box-shadow 0.2s, transform 0.2s;
  }
  .ngw-value-card:hover {
    box-shadow: 0 6px 24px rgba(44,53,60,0.10);
    transform: translateY(-2px);
  }
  .ngw-value-icon {
    font-size: 2.4rem;
    margin-bottom: 1rem;
  }
  .ngw-value-card h3 {
    font-size: 1.7rem;
    font-weight: 700;
    margin: 0 0 0.8rem;
    color: #2c353c;
  }
  .ngw-value-card p {
    font-size: 1.4rem;
    line-height: 1.6;
    color: #5a6872;
    margin: 0;
  }

  @media (max-width: 768px) {
    .ngw-value-grid {
      grid-template-columns: 1fr;
      gap: 1.2rem;
    }
  }

  /* ===== FEATURED CONTENT ===== */
  .ngw-featured {
    padding: 6vmin 4vmin;
    background: #fff;
  }
  .ngw-featured-inner {
    max-width: 1000px;
    margin: 0 auto;
  }
  .ngw-featured-heading {
    text-align: center;
    font-size: clamp(1.8rem, 3vw, 2.4rem);
    font-weight: 800;
    margin: 0 0 1rem;
    color: #2c353c;
  }
  .ngw-featured-sub {
    text-align: center;
    font-size: 1.5rem;
    color: #5a6872;
    margin: 0 0 3rem;
  }
  .ngw-featured-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  .ngw-featured-card {
    background: #fff;
    border-radius: 10px;
    overflow: hidden;
    border: 1px solid #d5dee0;
    transition: box-shadow 0.2s, transform 0.2s;
    display: flex;
    flex-direction: column;
  }
  .ngw-featured-card:hover {
    box-shadow: 0 6px 24px rgba(44,53,60,0.10);
    transform: translateY(-2px);
  }
  .ngw-featured-card a {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .ngw-featured-img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    display: block;
  }
  .ngw-featured-body {
    padding: 1.6rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  .ngw-featured-tag {
    font-size: 1.1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #8abfc5;
    margin: 0 0 0.6rem;
  }
  .ngw-featured-card h3 {
    font-size: 1.6rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 0.6rem;
    color: #2c353c;
  }
  .ngw-featured-card p {
    font-size: 1.3rem;
    line-height: 1.5;
    color: #5a6872;
    margin: 0;
    flex: 1;
  }

  @media (max-width: 768px) {
    .ngw-featured-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  /* ===== ABOUT SECTION ===== */
  .ngw-about {
    padding: 6vmin 4vmin;
    background: #2c353c;
  }
  .ngw-about-inner {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 3rem;
  }
  .ngw-about-photo {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
    border: 3px solid #8abfc5;
  }
  .ngw-about-text h2 {
    font-size: 2rem;
    font-weight: 800;
    margin: 0 0 1rem;
    color: #fff;
  }
  .ngw-about-text p {
    font-size: 1.5rem;
    line-height: 1.7;
    color: rgba(255,255,255,0.75);
    margin: 0 0 1.2rem;
  }
  .ngw-about-link {
    font-size: 1.4rem;
    font-weight: 600;
    color: #f3e2ae;
    text-decoration: none;
  }
  .ngw-about-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .ngw-about-inner {
      flex-direction: column;
      text-align: center;
    }
  }

  /* ===== LATEST ISSUES ===== */
  .ngw-latest {
    padding: 6vmin 4vmin;
    background: #eef3f4;
  }
  .ngw-latest-inner {
    max-width: 800px;
    margin: 0 auto;
  }
  .ngw-latest-heading {
    font-size: clamp(1.8rem, 3vw, 2.4rem);
    font-weight: 800;
    margin: 0 0 2.5rem;
    text-align: center;
    color: #2c353c;
  }
  .ngw-latest-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .ngw-latest-item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: 1.4rem 0;
    border-bottom: 1px solid #d0d8db;
  }
  .ngw-latest-item:first-child {
    border-top: 1px solid #d0d8db;
  }
  .ngw-latest-item a {
    font-size: 1.6rem;
    font-weight: 600;
    color: #2c353c;
    text-decoration: none;
    flex: 1;
    margin-right: 1rem;
    line-height: 1.4;
  }
  .ngw-latest-item a:hover {
    color: #8abfc5;
  }
  .ngw-latest-date {
    font-size: 1.3rem;
    color: #5a6872;
    white-space: nowrap;
    flex-shrink: 0;
  }
  .ngw-latest-cta {
    text-align: center;
    margin-top: 2.5rem;
  }
  .ngw-latest-cta a {
    font-size: 1.4rem;
    font-weight: 600;
    color: #8abfc5;
    text-decoration: none;
  }
  .ngw-latest-cta a:hover {
    text-decoration: underline;
  }

  /* ===== SUPPORT SECTION ===== */
  .ngw-support {
    padding: 6vmin 4vmin;
    background: #2c353c;
    text-align: center;
  }
  .ngw-support-inner {
    max-width: 600px;
    margin: 0 auto;
  }
  .ngw-support h2 {
    font-size: clamp(1.8rem, 3vw, 2.4rem);
    font-weight: 800;
    color: #fff;
    margin: 0 0 1rem;
  }
  .ngw-support p {
    font-size: 1.5rem;
    line-height: 1.7;
    color: rgba(255,255,255,0.7);
    margin: 0 0 2rem;
  }
  .ngw-support-btn {
    display: inline-block;
    padding: 12px 32px;
    background: #f3e2ae;
    color: #2c353c;
    font-weight: 700;
    font-size: 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    transition: background 0.2s;
  }
  .ngw-support-btn:hover {
    background: #e8d49a;
  }
</style>

<main class="site-main ngw-home">

  {{!-- ===== HERO SECTION ===== --}}
  <section class="ngw-hero">
    <div class="ngw-hero-inner">
      <h1 class="ngw-hero-tagline">Practical AI education for professionals who <em>build</em>.</h1>
      <p class="ngw-hero-sub">No Hype. No Fear. Just Workflows.</p>

      {{#if @site.members_enabled}}
        {{#unless @site.members_invite_only}}
          {{#unless @member}}
            <form class="ngw-hero-form" data-members-form>
              <input type="email" name="email" data-members-email placeholder="Your email address" required>
              <button type="submit" aria-label="Subscribe">
                <span class="default">Subscribe</span>
                <span class="loader">{{> "icons/loader"}}</span>
                <span class="success">Email sent</span>
              </button>
            </form>
          {{/unless}}
        {{/unless}}
      {{/if}}

      <p class="ngw-hero-proof">Every Tuesday. Free. 10 minutes. No spam.</p>
    </div>
  </section>

  {{!-- ===== VALUE PROPOSITION ===== --}}
  <section class="ngw-value">
    <div class="ngw-value-inner">
      <h2 class="ngw-value-heading">What you get every week</h2>
      <div class="ngw-value-grid">

        <div class="ngw-value-card">
          <div class="ngw-value-icon">üìö</div>
          <h3>Learn AI Concepts</h3>
          <p>A progressive curriculum that builds your AI fluency from the ground up. No jargon, no prerequisites. Just clear explanations that connect to your actual work.</p>
        </div>

        <div class="ngw-value-card">
          <div class="ngw-value-icon">‚ö°</div>
          <h3>Steal Real Prompts</h3>
          <p>The exact prompts I use every week with full context, the model I used, and an honest breakdown of what worked and what failed. No theory. Just receipts.</p>
        </div>

        <div class="ngw-value-card">
          <div class="ngw-value-icon">üõ†Ô∏è</div>
          <h3>Build Alongside Me</h3>
          <p>A non-technical professional documenting the entire AI building journey in public. The wins, the failures, and the workflows you can use immediately.</p>
        </div>

      </div>
    </div>
  </section>

  {{!-- ===== FEATURED CONTENT ===== --}}
  <section class="ngw-featured">
    <div class="ngw-featured-inner">
      <h2 class="ngw-featured-heading">Start with these</h2>
      <p class="ngw-featured-sub">Not sure where to begin? These three posts capture what Neural Gains Weekly is all about.</p>

      <div class="ngw-featured-grid">
        {{!-- Featured post 1: Your Life Becomes the Dataset --}}
        {{#get "posts" filter="slug:volume-18-your-life-becomes-the-dataset" limit="1" include="tags"}}
          {{#foreach posts}}
            <div class="ngw-featured-card">
              <a href="{{url}}">
                {{#if feature_image}}
                  <img class="ngw-featured-img" src="{{img_url feature_image size='m'}}" alt="{{title}}" loading="lazy">
                {{/if}}
                <div class="ngw-featured-body">
                  <div class="ngw-featured-tag">The Big Picture</div>
                  <h3>{{title}}</h3>
                  <p>{{excerpt words="20"}}</p>
                </div>
              </a>
            </div>
          {{/foreach}}
        {{/get}}

        {{!-- Featured post 2: Context is King --}}
        {{#get "posts" filter="slug:context-is-king-why-your-life-is-the-next-great-training-set" limit="1" include="tags"}}
          {{#foreach posts}}
            <div class="ngw-featured-card">
              <a href="{{url}}">
                {{#if feature_image}}
                  <img class="ngw-featured-img" src="{{img_url feature_image size='m'}}" alt="{{title}}" loading="lazy">
                {{/if}}
                <div class="ngw-featured-body">
                  <div class="ngw-featured-tag">Founder's Corner</div>
                  <h3>{{title}}</h3>
                  <p>{{excerpt words="20"}}</p>
                </div>
              </a>
            </div>
          {{/foreach}}
        {{/get}}

        {{!-- Featured post 3: Under the Hood Volume 6 --}}
        {{#get "posts" filter="slug:under-the-hood-volume-6" limit="1" include="tags"}}
          {{#foreach posts}}
            <div class="ngw-featured-card">
              <a href="{{url}}">
                {{#if feature_image}}
                  <img class="ngw-featured-img" src="{{img_url feature_image size='m'}}" alt="{{title}}" loading="lazy">
                {{/if}}
                <div class="ngw-featured-body">
                  <div class="ngw-featured-tag">Prompt Library</div>
                  <h3>{{title}}</h3>
                  <p>{{excerpt words="20"}}</p>
                </div>
              </a>
            </div>
          {{/foreach}}
        {{/get}}
      </div>
    </div>
  </section>

  {{!-- ===== ABOUT SECTION ===== --}}
  <section class="ngw-about">
    <div class="ngw-about-inner">
      {{#get "users" filter="slug:santosh" limit="1"}}
        {{#foreach users}}
          {{#if profile_image}}
            <img class="ngw-about-photo" src="{{img_url profile_image size='m'}}" alt="{{name}}" loading="lazy">
          {{/if}}
        {{/foreach}}
      {{/get}}
      <div class="ngw-about-text">
        <h2>Built by Santosh Savel</h2>
        <p>Over 13 years in the healthcare industry across project management, sales, product, technology, and operations. In 2025, I stopped reading about AI and started building with it. No coding background. No CS degree. Just a belief that non-technical professionals deserved better than hype and fear.</p>
        <a class="ngw-about-link" href="/about/">Read the full story ‚Üí</a>
      </div>
    </div>
  </section>

  {{!-- ===== LATEST ISSUES ===== --}}
  <section class="ngw-latest">
    <div class="ngw-latest-inner">
      <h2 class="ngw-latest-heading">Latest issues</h2>
      <ul class="ngw-latest-list">
        {{#get "posts" limit="6" include="tags" order="published_at desc"}}
          {{#foreach posts}}
            <li class="ngw-latest-item">
              <a href="{{url}}">{{title}}</a>
              <span class="ngw-latest-date">{{date published_at format="MMM D, YYYY"}}</span>
            </li>
          {{/foreach}}
        {{/get}}
      </ul>
      <div class="ngw-latest-cta">
        <a href="/archive/">Browse the full archive ‚Üí</a>
      </div>
    </div>
  </section>

  {{!-- ===== SUPPORT SECTION ===== --}}
  <section class="ngw-support">
    <div class="ngw-support-inner">
      <h2>Support the work</h2>
      <p>Neural Gains Weekly is free and always will be. If this work helps you build with AI, consider supporting it so I can keep going.</p>
      <a class="ngw-support-btn" href="/support/">See how you can help</a>
    </div>
  </section>

</main>

