{{!< default}}

<main class="site-main template-archive">

  {{!-- Page styles --}}
  <style>
    /* Top spacing fix */
    .template-archive .site-content {
      padding-top: max(6vmin, 3rem) !important;
    }

    /* Header */
    .archive-header {
      text-align: center;
      max-width: 800px;
      margin: 0 auto 0.5rem;
      padding: 0 1rem;
    }
    .archive-title {
      font-family: var(--gh-font-heading, var(--font-sans));
      font-size: clamp(2.4rem, 5vw, 3.6rem);
      font-weight: 800;
      letter-spacing: -0.02em;
      margin: 0 0 0.8rem;
      color: #2c353c;
    }
    .archive-excerpt {
      font-size: 1.5rem;
      color: var(--secondary-text-color);
      margin: 0;
      line-height: 1.6;
    }

    /* Body text from Ghost page editor */
    .archive-body {
      text-align: center;
      max-width: 800px;
      margin: 0 auto 1.5rem;
    }
    .archive-body p {
      font-size: 1.5rem;
      color: var(--secondary-text-color);
      line-height: 1.6;
      margin: 0;
    }

    /* Container */
    .archive-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    /* Filter buttons */
    .ngw-filters {
      display: flex;
      justify-content: center;
      gap: 8px;
      flex-wrap: wrap;
      margin: 0 0 2rem;
    }
    .ngw-filter-btn {
      padding: 8px 20px;
      border: 1px solid var(--light-gray-color, #e6e6e6);
      border-radius: 100px;
      background: transparent;
      color: var(--secondary-text-color);
      font-family: var(--gh-font-body, var(--font-sans));
      font-size: 1.4rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }
    .ngw-filter-btn:hover {
      border-color: #8abfc5;
      color: #8abfc5;
    }
    .ngw-filter-btn.active {
      background: #2c353c;
      border-color: #2c353c;
      color: #fff;
    }

    /* Post list */
    .archive-list {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    .archive-item {
      padding: 1.2rem 0;
      border-bottom: 1px solid var(--light-gray-color, #e6e6e6);
    }
    .archive-item:first-child {
      border-top: 1px solid var(--light-gray-color, #e6e6e6);
    }
    .archive-item.hidden {
      display: none;
    }
    .archive-item-link {
      text-decoration: none;
      color: var(--primary-text-color);
      display: block;
    }
    .archive-item-link:hover .archive-item-title {
      color: #8abfc5;
    }
    .archive-item-top {
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      gap: 1rem;
      margin-bottom: 0.2rem;
    }
    .archive-item-title {
      font-family: var(--gh-font-heading, var(--font-sans));
      font-size: 1.7rem;
      font-weight: 700;
      line-height: 1.35;
      margin: 0;
      flex: 1;
      transition: color 0.2s;
    }
    .archive-item-date {
      font-size: 1.3rem;
      color: var(--secondary-text-color);
      white-space: nowrap;
      flex-shrink: 0;
    }
    .archive-item-meta {
      display: flex;
      align-items: center;
      gap: 0.6rem;
      margin-top: 0.15rem;
    }
    .archive-item-badge {
      font-size: 1.1rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.04em;
      color: #8abfc5;
    }
    .archive-item-reading {
      font-size: 1.2rem;
      color: var(--secondary-text-color);
    }

    /* No results message */
    .archive-empty {
      text-align: center;
      padding: 3rem 0;
      color: var(--secondary-text-color);
      font-size: 1.5rem;
      display: none;
    }

    @media (max-width: 600px) {
      .archive-item-top {
        flex-direction: column;
        gap: 0.2rem;
      }
      .archive-item-title {
        font-size: 1.5rem;
      }
    }
  </style>

  {{!-- Pull the editable Page by slug --}}
  {{#get "pages" filter="slug:archive" limit="1"}}
    {{#foreach pages}}
      <article class="article">
        <header class="archive-header">
          <h1 class="archive-title">{{title}}</h1>
          {{#if custom_excerpt}}<p class="archive-excerpt">{{custom_excerpt}}</p>{{/if}}
        </header>

        {{#if html}}
          <section class="archive-body">
            {{{html}}}
          </section>
        {{/if}}
      </article>
    {{/foreach}}
  {{/get}}

  {{!-- Filter buttons --}}
  <section class="archive-container">
    <div class="ngw-filters">
      <button class="ngw-filter-btn active" data-filter="all">All</button>
      <button class="ngw-filter-btn" data-filter="newsletter">Newsletter</button>
      <button class="ngw-filter-btn" data-filter="founders-corner">Thought Leadership</button>
      <button class="ngw-filter-btn" data-filter="prompt-library">Prompt Library</button>
    </div>

    {{!-- Post list: pull ALL posts across all collections --}}
    <ul class="archive-list">
      {{#get "posts" limit="all" include="tags" order="published_at desc"}}
        {{#foreach posts}}
          <li class="archive-item"
              data-tags="{{#foreach tags visibility="all"}}{{slug}} {{/foreach}}">
            <a class="archive-item-link" href="{{url}}">
              <div class="archive-item-top">
                <h2 class="archive-item-title">{{title}}</h2>
                <span class="archive-item-date">{{date published_at format="MMM D, YYYY"}}</span>
              </div>
              <div class="archive-item-meta">
                {{#has tag="#founders-corner"}}
                  <span class="archive-item-badge">Thought Leadership</span>
                {{/has}}
                {{#has tag="#prompt-library"}}
                  <span class="archive-item-badge">Prompt Library</span>
                {{/has}}
                {{#if reading_time}}
                  <span class="archive-item-reading">{{reading_time}}</span>
                {{/if}}
              </div>
            </a>
          </li>
        {{/foreach}}
      {{/get}}
    </ul>
    <div class="archive-empty">No posts found for this filter.</div>
  </section>

  {{!-- Client-side filtering --}}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var buttons = document.querySelectorAll('.ngw-filter-btn');
      var items = document.querySelectorAll('.archive-item');
      var empty = document.querySelector('.archive-empty');

      if (!buttons.length || !items.length) return;

      buttons.forEach(function(btn) {
        btn.addEventListener('click', function() {
          var filter = this.getAttribute('data-filter');
          var visibleCount = 0;

          buttons.forEach(function(b) { b.classList.remove('active'); });
          this.classList.add('active');

          items.forEach(function(item) {
            var tags = (item.getAttribute('data-tags') || '').toLowerCase();
            var show = false;

            if (filter === 'all') {
              show = true;
            } else if (filter === 'newsletter') {
              show = tags.indexOf('hash-founders-corner') === -1 && tags.indexOf('hash-prompt-library') === -1;
            } else if (filter === 'founders-corner') {
              show = tags.indexOf('hash-founders-corner') > -1;
            } else if (filter === 'prompt-library') {
              show = tags.indexOf('hash-prompt-library') > -1;
            }

            if (show) {
              item.classList.remove('hidden');
              visibleCount++;
            } else {
              item.classList.add('hidden');
            }
          });

          if (empty) {
            empty.style.display = visibleCount === 0 ? 'block' : 'none';
          }
        });
      });
    });
  </script>

</main>
